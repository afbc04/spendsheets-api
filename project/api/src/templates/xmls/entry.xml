<templates>

    <template id="list">
        <auth />
        <page />
        <sort>
            <s name="id" />
            <s name="name" caseInsensitive="true" />
        </sort>
        <query>
            <q name="name" datatype="string" />
        </query>
    </template>

    <template id="create">
        <auth required="true"/>
        <body required="true">
            <i name="type" required="true"/>
            <i name="categoryId" datatype="integer" null="true" />
            <i name="targetMoney" datatype="float" />
            <i name="actualMoney" datatype="float" />
            <i name="date" datatype="date" />
            <i name="dueDate" null="true" datatype="date" />
            <i name="monthlyServiceId" datatype="integer" null="true" />
            <i name="description" null="true" />
            <i name="visible" datatype="boolean" />
            <i name="status" />
        </body>
    </template>

    <template id="clear">
        <auth required="true"/>
        <query>
            <q name="ids" />
        </query>
    </template>

    <template id="get">
        <auth />
    </template>

    <template id="update-full">
        <auth required="true"/>
        <body required="true">
            <i name="categoryId" datatype="integer" null="true" />
            <i name="targetMoney" datatype="float" />
            <i name="actualMoney" datatype="float" />
            <i name="date" datatype="date" />
            <i name="dueDate" null="true" datatype="date" />
            <i name="monthlyServiceId" datatype="integer" null="true" />
            <i name="description" null="true" />
            <i name="visible" datatype="boolean" />
            <i name="status" />
        </body>
    </template>

    <template id="update-partial">
        <auth required="true"/>
        <body required="true">
            <i name="categoryId" datatype="integer" null="true" />
            <i name="targetMoney" datatype="float" />
            <i name="actualMoney" datatype="float" />
            <i name="date" datatype="date" />
            <i name="dueDate" null="true" datatype="date" />
            <i name="monthlyServiceId" datatype="integer" null="true" />
            <i name="description" null="true" />
            <i name="visible" datatype="boolean" />
            <i name="status" />
        </body>
    </template>

    <template id="delete">
        <auth required="true"/>
    </template>

</templates>