    <template id="get">
        <auth />
    </template>

    <template id="update-full">
        <auth required="true"/>
        <body required="true">
            <i name="name" required="true"/>
            <i name="description" null="true"/>
            <i name="categoryRelatedId" null="true" datatype="integer" />
            <i name="moneyAmount" null="true" datatype="float" />
            <i name="active" datatype="boolean" />
        </body>
    </template>

    <template id="update-partial">
        <auth required="true"/>
        <body required="true">
            <i name="name"/>
            <i name="description" null="true"/>
            <i name="categoryRelatedId" null="true" datatype="integer" />
            <i name="moneyAmount" null="true" datatype="float" />
            <i name="active" datatype="boolean" />
        </body>
    </template>

    <template id="delete">
        <auth required="true"/>
    </template>

</templates>