<templates>

    <template id="list">
        <auth />
        <page />
        <sort>
            <s name="id" />
            <s name="name" caseInsensitive="true" />
        </sort>
        <query>
            <q name="name" datatype="string" />
            <q name="active" datatype="boolean" />
        </query>
    </template>

    <template id="create">
        <auth required="true"/>
        <body required="true">
            <i name="name" required="true"/>
            <i name="description" null="true"/>
            <i name="categoryRelatedId" null="true" datatype="integer" />
            <i name="moneyAmount" null="true" datatype="float" />
            <i name="active" datatype="boolean" />
        </body>
    </template>

    <template id="clear">
        <auth required="true"/>
        <query>
            <q name="active" />
            <q name="ids" />
        </query>
    </template>

