<templates>

    <template id="list">
        <auth />
        <page />
        <sort>
            <s name="date" />
            <s name="money" />
            <s name="id" />
        </sort>
    </template>

    <template id="create">
        <auth required="true"/>
        <body required="true">
            <i name="money" required="true" datatype="float"/>
            <i name="date" datatype="date" />
            <i name="comment" null="true" />
        </body>
    </template>

    <template id="clear">
        <auth required="true"/>
        <query>
            <q name="ids" />
        </query>
    </template>

    <template id="get">
        <auth />
    </template>

    <template id="update-partial">
        <auth required="true"/>
        <body required="true">
            <i name="money" datatype="float"/>
            <i name="date" datatype="date" />
            <i name="comment" null="true" />
        </body>
    </template>

    <template id="update-full">
        <auth required="true"/>
        <body required="true">
            <i name="money" required="true" datatype="float"/>
            <i name="date" datatype="date" />
            <i name="comment" null="true" />
        </body>
    </template>

    <template id="delete">
        <auth required="true"/>
    </template>

</templates>